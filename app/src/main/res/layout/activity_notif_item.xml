<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/notif_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/card_bg"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/notif_txt_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Titulo"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/notif_txt_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notif_txt_titulo"
            android:layout_alignStart="@+id/notif_txt_titulo"
            android:layout_below="@+id/notif_txt_titulo"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="8dp"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="@color/subtitle_text_color"
            />
        <TextView
            android:id="@+id/notif_txt_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notif_txt_fecha"
            android:layout_alignStart="@+id/notif_txt_fecha"
            android:layout_below="@+id/notif_txt_fecha"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="8dp"
            android:text="Descripcion"
            android:textColor="@color/content_text_color" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/notif_img_estado"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/notif_container"
        app:layout_constraintStart_toStartOf="@+id/notif_container"
        app:layout_constraintTop_toTopOf="@+id/notif_container"
        android:background="@drawable/cercleshape_5"
        android:src="@drawable/notf_mail_new"
        android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>